<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/display_iv"
        android:layout_width="120dp"
        android:layout_alignParentLeft="true"
        android:layout_height="160dp" />
    <LinearLayout
        android:layout_toRightOf="@id/display_iv"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="160dp">
        <TextView
            android:id="@+id/name_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/cardId_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/phone_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/imei_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/imsi_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/compareAddr_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/compareTime_tv"
            style="@style/display_item_tv_style" />
        <TextView
            android:id="@+id/compareValue_tv"
            style="@style/display_item_tv_style" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>